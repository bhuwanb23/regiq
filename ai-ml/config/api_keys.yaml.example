# REGIQ AI/ML API Keys Configuration Template
# Copy this file to api_keys.yaml and fill in your actual API keys
# NEVER commit api_keys.yaml to version control!

# =============================================================================
# LLM API KEYS - Gemini Only
# =============================================================================
llm_providers:
  google:
    api_key: "YOUR_GOOGLE_GEMINI_API_KEY_HERE"
    project_id: "your-gcp-project-id"
    location: "us-central1"
    
    # Model Configuration
    model_name: "gemini-1.5-pro"
    fallback_model: "gemini-1.5-flash"
    max_tokens: 8192
    temperature: 0.3
    
    # Rate Limiting
    rate_limit_rpm: 60  # Requests per minute
    rate_limit_tpm: 32000  # Tokens per minute
    
    # Error Handling
    max_retries: 3
    retry_delay: 1.0
    timeout_seconds: 30
    
# =============================================================================
# CLOUD PROVIDER CREDENTIALS - Optional for Future
# =============================================================================
cloud_providers:
  google_cloud:
    enabled: false
    service_account_key: "path/to/service-account-key.json"
    project_id: "your-gcp-project-id"

# =============================================================================
# DATABASE CREDENTIALS
# =============================================================================
databases:
  # SQLite - no credentials needed for local development
  sqlite:
    database_path: "./data/regiq_local.db"
    
  # PostgreSQL for production
  postgresql:
    host: "localhost"
    port: 5432
    database: "regiq_ai_ml"
    username: "regiq_user"
    password: "YOUR_POSTGRES_PASSWORD"
    
  # Optional: Redis for caching
  redis:
    host: "localhost"
    port: 6379
    password: "YOUR_REDIS_PASSWORD"

# =============================================================================
# VECTOR DATABASE CREDENTIALS - Local First
# =============================================================================
vector_databases:
  # ChromaDB and FAISS are local - no credentials needed
  chroma:
    persist_directory: "./data/chroma_db"
    
  faiss:
    index_path: "./data/faiss_index"

# =============================================================================
# EXTERNAL API INTEGRATIONS
# =============================================================================
external_apis:
  regulatory_sources:
    sec_edgar:
      api_key: "YOUR_SEC_EDGAR_API_KEY"
      user_agent: "your-company-name your-email@company.com"
      
    europa_eu:
      api_key: "YOUR_EUROPA_API_KEY"
      
  monitoring:
    datadog:
      api_key: "YOUR_DATADOG_API_KEY"
      app_key: "YOUR_DATADOG_APP_KEY"
      
    new_relic:
      license_key: "YOUR_NEW_RELIC_LICENSE_KEY"
      
  notifications:
    slack:
      webhook_url: "YOUR_SLACK_WEBHOOK_URL"
      bot_token: "YOUR_SLACK_BOT_TOKEN"
      
    email:
      smtp_server: "smtp.gmail.com"
      smtp_port: 587
      username: "your-email@company.com"
      password: "YOUR_EMAIL_PASSWORD"

# =============================================================================
# SECURITY KEYS
# =============================================================================
security:
  jwt:
    secret_key: "YOUR_JWT_SECRET_KEY_HERE"
    algorithm: "HS256"
    expiration_hours: 24
    
  encryption:
    master_key: "YOUR_ENCRYPTION_MASTER_KEY"
    salt: "YOUR_ENCRYPTION_SALT"
    
  api_security:
    rate_limit_secret: "YOUR_RATE_LIMIT_SECRET"
    cors_origins: ["http://localhost:3000", "https://your-domain.com"]

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
development:
  debug_mode: true
  log_level: "DEBUG"
  mock_external_apis: false
  
# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================
production:
  debug_mode: false
  log_level: "INFO"
  ssl_required: true
  
# =============================================================================
# USAGE NOTES
# =============================================================================
# 1. Copy this file to api_keys.yaml
# 2. Replace all placeholder values with your actual credentials
# 3. Add api_keys.yaml to your .gitignore file
# 4. Use environment variables in production for better security
# 5. Rotate keys regularly according to your security policy
